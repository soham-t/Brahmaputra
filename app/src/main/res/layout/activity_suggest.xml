<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.hostel.soham.brahmaputra.Suggestion">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView11"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Suggestion Form"
            android:background="@drawable/tr"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            style="@style/CodeFont"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_below="@+id/textView11"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/nameEditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView21"
            android:layout_alignLeft="@+id/textView21"
            android:layout_alignStart="@+id/textView21" />
        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room No."
            android:layout_below="@+id/nameEditText1"
            android:layout_alignLeft="@+id/nameEditText1"
            android:layout_alignStart="@+id/nameEditText1"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/roomEditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView31"
            android:layout_alignLeft="@+id/textView31"
            android:layout_alignStart="@+id/textView31" />
        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Webmail"
            android:layout_below="@+id/roomEditText1"
            android:layout_alignLeft="@+id/roomEditText1"
            android:layout_alignStart="@+id/roomEditText1"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/webmEditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView41"
            android:layout_alignLeft="@+id/textView41"
            android:layout_alignStart="@+id/textView41" />
        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggestion"
            android:layout_below="@+id/webmEditText1"
            android:layout_alignLeft="@+id/webmEditText1"
            android:layout_alignStart="@+id/webmEditText1"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/suggEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView51"
            android:layout_alignLeft="@+id/textView51"
            android:layout_alignStart="@+id/textView51" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/submitButton1"
            android:layout_below="@+id/suggEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
</ScrollView>